{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "title": "Real-Estate Sold in 2018",
  "data": {
    "url": "https://raw.githubusercontent.com/CongboZangJason/A2-chongbo-zang-28291239/main/data/A2%20sold%20clean.csv"
  },
  "params": [
    {
      "name": "Price_below",
      "value": 6500000,
      "bind": {
        "input": "range",
        "min": 100000,
        "max": 6500000,
        "step": 100000,
        "name": "Maximum Price: "
      }
    },
    {
      "name": "Property_type_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "acreage/semi-rural", 
          "alpine", 
          "apartment", 
          "farmlet", 
          "house", 
          "lifestyle", 
          "residential land", 
          "townhouse", 
          "unit", 
          "villa", 
          "other"
        ],
        "labels": [
          "Show All",
          "Acreage/semi-rural", 
          "Alpine", 
          "Apartment", 
          "Farmlet", 
          "House", 
          "Lifestyle", 
          "Residential land", 
          "Townhouse", 
          "Unit", 
          "Villa", 
          "Other"
        ],
        "name": "Property type: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Price > 0"},
    {"filter": "datum.Price < Price_below"},
    {
    "filter": "Property_type_selection == null || datum['Property Type'] == Property_type_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Property Type",
      "type": "nominal",
      "title": "Property Type"
    },
    "y": {
      "field": "Price",
      "type": "quantitative",
      "axis": {"tickCount": 5}
    } 
  },
  "layer": [
    {
      "selection": {
        "Property_Type_highlight": {
          "type": "multi",
          "fields": ["Property Type"],
          "bind": "legend"
        }
      },
      "mark": "point",
      "encoding": {
        "color": {
          "field": "Property Type",
          "type": "nominal",
          "scale": {
            "domain": [
              "acreage/semi-rural", 
              "alpine", 
              "apartment", 
              "farmlet", 
              "house", 
              "lifestyle", 
              "residential land", 
              "townhouse", 
              "unit", 
              "villa", 
              "other"
            ],
            "range": [
              "#a6cee3",
              "#1f78b4",
              "#b2df8a",
              "#33a02c",
              "#fb9a99",
              "#e31a1c",
              "#fdbf6f",
              "#ff7f00",
              "#cab2d6",
              "#6a3d9a",
              "#ffff99"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "Property_Type_highlight", "value": 0.9},
          "value": 0.1
        },
        "tooltip": [
          {"field": "Street Address", "type": "nominal"},
          {"field": "Suburb", "type": "nominal"},
          {"field": "Postcode", "type": "ordinal"},
          {"field": "Price", "type": "quantitative"}
        ]
      }
    },
    {
    "mark": "line",
    "encoding": {
      "x": {"field": "Property Type", "type": "nominal"},
      "y": {"aggregate": "mean",
            "field": "Price", 
            "title": "Price ($)" }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dx": 0,
        "fontSize": 10,
        "fontStyle": "bold"
      },
      "encoding": {
        "text": {"field": "Price", "type": "quantitative"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Price'] == 6100000 || datum['Price'] == 172500",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Street Address", "type": "nominal"},
          {"field": "Suburb", "type": "nominal"},
          {"field": "Postcode", "type": "ordinal"},
          {"field": "Price", "type": "quantitative"}
        ]
      }
    }
  ],
  "config": {
      "background": "#F3FAF9",
      "axis": {
          "titleColor": "#527298",
          "labelColor": "#527298",
          "labelFont": "sans-serif",
          "labelFontSize": 12,
          "titleFontSize": 12
      }
  }
}